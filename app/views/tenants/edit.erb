<form action="tenants/<%= @tenant.id %> %" method="post">
<input type="hidden" name = "_method" value = "patch" />


<label> Name:</label>
<input type = "text" name = "tenant[name]" value="<%= @tenant.name %>">

<select name="tenant[apartment_id]">
<% @apartments.each do |apartment| %>
    <option value=<%=apartment.id%> > <%=apartment.address%> </option>
<% end %>
</select>


<label> New Address: </label>
<input type="text" name="apartment[address]">

<input type= "submit"/>

</form>



