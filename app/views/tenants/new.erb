<form action= "/tenants" method='post' >

<label>Tenant Name:</label>
<input type="text" name="tenant[name]"/> <br>

<label>Apartment Address:</label>
 <select name= "tenant[apartment_id]">

     <% @apartments.each do |apartment|%>
         <option value=<%=apartment.id%>>
             <%=apartment.address%>
         </option>
         <%end%>
 </select><br>

 <label> Create an Apartment </label>

<label>Apartment Address:</label> 
<input type="text" name="apartment[address]"/><br>

<input type="submit" />

</form>
